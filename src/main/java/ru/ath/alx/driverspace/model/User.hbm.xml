<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.ath.alx.driverspace.model.User" table="users" schema="drvspacedb">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned"/>
        </id>
        <property name="tabnomer">
            <column name="tabnomer" sql-type="varchar(4)" length="4"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="token">
            <column name="token" sql-type="varchar(64)" length="64"/>
        </property>
        <property name="comment">
            <column name="comment" sql-type="varchar(100)" length="100"/>
        </property>
    </class>
</hibernate-mapping>